extends layout
append head
  link(rel="stylesheet", href="/stylesheets/login.css")
  link(rel="stylesheet", href="/stylesheets/laughs.css")

block content
  a(id="return" href="/") Return to Main Page
  br
  h2 Laughs
  if errors.length
    br
    each error in errors
        div(id='errors')= error
  br
  form(action='/laughs' method='POST')
    ul(class='flex-outer')
      input(type='hidden' name='_csrf' value=csrfToken)
      li
        label Share something funny...
        textarea(name='laughBody' placeholder="What's so funny?")
      li
        label Bow (for those hahahahaahas!)
        input(type='radio' name='bows')
      li
        label Lols 1-5 (optional)
        input(type='number' name='lols' placeholder="5")
      li
        label Write a review...
        textarea(name='reviewBody' placeholder="What are you thinking!?")
      li
        button(type='submit' name='submit' id='submit' value='Laughs') Submit
